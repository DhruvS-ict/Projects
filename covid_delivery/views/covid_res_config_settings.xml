<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">delivery_res_config_settings_view_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='website_selection_settings']" position="after">
                    <h2>Covid Delivery</h2>
                    <div class="row mt16 o_settings_container" name="catalog_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="variant_options">
                            <label for="group_covid_delivery_message"/>
                            <field name="group_covid_delivery_message"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
