<odoo>
    <data>
        <record id="contact_sale_view_partner_form" model="ir.ui.view">
            <field name="name">res partner form inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!--                <xpath expr="/form/sheet/div[hasclass('oe_button_box')]" position="inside">-->
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="test" class="oe_stat_button" icon="fa-list-ol">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="contact_sale_count"/>
                            </span>
                            <span class="o_stat_text">Contact Sale</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>
